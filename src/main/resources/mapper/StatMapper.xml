<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.xeblog.api.dao.StatMapper">

    <resultMap type="cn.xeblog.api.domain.model.Stat" id="StatMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="accessIp" column="access_ip" jdbcType="VARCHAR"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!-- 批量插入 -->
    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into xeblog.stat(addressaccess_ipusernamecreate_timeupdate_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.address}#{entity.accessIp}#{entity.username}#{entity.createTime}#{entity.updateTime})
        </foreach>
    </insert>
    <!-- 批量插入或按主键更新 -->
    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into xeblog.stat(addressaccess_ipusernamecreate_timeupdate_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.address}#{entity.accessIp}#{entity.username}#{entity.createTime}#{entity.updateTime})
        </foreach>
        on duplicate key update
        address = values(address) access_ip = values(access_ip) username = values(username) create_time =
        values(create_time) update_time = values(update_time)
    </insert>

</mapper>

